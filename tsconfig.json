{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "strict": true,
        "baseUrl": "./",
        "paths": {
            "src/*": ["src/*"],
            "src": ["src"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
